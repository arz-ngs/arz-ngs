<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

	<persistence-unit name="ng-service-model">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>java:/osr_non_xa_ds</jta-data-source>
		<class>at.arz.ngs.Environment</class>
		<class>at.arz.ngs.Host</class>
		<class>at.arz.ngs.Script</class>
		<class>at.arz.ngs.Service</class>
		<class>at.arz.ngs.ServiceInstance</class>
		<class>at.arz.ngs.converter.jpa.EnvironmentNameConverter</class>
		<class>at.arz.ngs.converter.jpa.HostNameConverter</class>
		<class>at.arz.ngs.converter.jpa.PathRestartConverter</class>
		<class>at.arz.ngs.converter.jpa.PathStartConverter</class>
		<class>at.arz.ngs.converter.jpa.PathStatusConverter</class>
		<class>at.arz.ngs.converter.jpa.PathStopConverter</class>
		<class>at.arz.ngs.converter.jpa.ScriptNameConverter</class>
		<class>at.arz.ngs.converter.jpa.ServiceInstanceNameConverter</class>
		<class>at.arz.ngs.converter.jpa.ServiceNameConverter</class>
		<exclude-unlisted-classes>false</exclude-unlisted-classes>
		<properties>
			  <property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
		</properties>
	</persistence-unit>

</persistence>